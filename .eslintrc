extends: 'eslint:recommended'

ecmaFeatures:
  modules: true
  # Note: https://github.com/eslint/eslint/issues/4787
  sourceType: module

parserOptions:
    sourceType: module

rules:
  indent:
    - 2
    - 4
  quotes: 0
  linebreak-style:
    - 2
    - unix
  semi:
    - 2
    - always
  strict: 0
  dot-notation: 0
  no-underscore-dangle: 0
  eol-last: 0
  curly: 0
  camelcase: 0

env:
  browser: true
  es6: true

globals:
  jQueryInstance: true
  DEBUG: true

  # jasmine global variables
  jasmine: true
  describe: true
  it: true
  iit: true
  ddescribe: true
  afterEach: true
  beforeEach: true
  expect: true
  testNode: true
  waits: true
  runs: true
